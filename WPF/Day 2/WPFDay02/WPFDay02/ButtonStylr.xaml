<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <LinearGradientBrush x:Key="BtnBG" StartPoint="0,0"  EndPoint="1,0">
        <GradientStop Color="BlanchedAlmond" Offset=".25"></GradientStop>
        <GradientStop Color="SkyBlue" Offset=".5"></GradientStop>
        <GradientStop Color="Teal" Offset=".75"></GradientStop>
    </LinearGradientBrush>
    <Style    x:Key="btnstyle">
        <Setter Property="Button.Width" Value="70"></Setter>
        <Setter Property="Button.Height" Value="40"></Setter>
        <Setter Property="Button.Content" Value="Click"></Setter>
        <Setter Property="Button.FontFamily" Value="Arial"></Setter>

        <Setter Property="Button.Margin" Value="5"></Setter>
        <Setter Property="Button.FontWeight" Value="Bold"></Setter>
        <Setter Property="Button.Background" Value="{StaticResource ResourceKey=BtnBG}"></Setter>

    </Style>
    <Style  x:Key="RedBtn"  BasedOn="{StaticResource ResourceKey=btnstyle}">

        <Setter Property="Button.Background" Value="Red"></Setter>

    </Style>

    <Style  x:Key="GrBtn"  BasedOn="{StaticResource ResourceKey=btnstyle}">

        <Setter Property="Button.Background" Value="Green"></Setter>

    </Style>
</ResourceDictionary>